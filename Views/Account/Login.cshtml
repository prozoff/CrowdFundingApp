@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model CrowdFundingApp.ViewModels.LoginViewModel

    <div class="row justify-content-center">
        <div class="col-4">
            <form method="post" asp-controller="Account" asp-action="Login"
                  asp-route-returnUrl="@Model.ReturnUrl">
                <div asp-validation-summary="ModelOnly"></div>
                <h2>@Localizer["LoginForm"]</h2>
                <div>
                    <label class="col-form-label" asp-for="Login">@Localizer["Login"]</label><br />
                    <input class="form-control" asp-for="Login" />
                    <span asp-validation-for="Login"></span>
                </div>
                <div>
                    <label class="col-form-label" asp-for="Password">@Localizer["Password"]</label><br />
                    <input class="form-control" asp-for="Password" />
                    <span asp-validation-for="Password"></span>
                </div>
                <div>
                    <input class="btn btn-primary mt-2" type="submit" value="@Localizer["LoginTo"]" />
                </div>
            </form>
        </div>
    </div>

