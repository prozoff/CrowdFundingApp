@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model CrowdFundingApp.ViewModels.CompanyProfileViewModel
@{
    ViewData["Title"] = "Edit Bonus";
}

<div class="row justify-content-center">
    <div class="col-4">
        <form asp-action="saveEditedBonus" asp-controller="CompanyProfile" asp-route-companyId="@Model.companyProfile.companyId" asp-route-bonusId="@Model.bonus.bonusId">
            <div class="form-group">
                <label asp-for="@Model.bonus.bonusName">@Localizer["BonusName"]</label>
                <input required class="form-control" type="text" asp-for="@Model.bonus.bonusName" value="@Model.bonus.bonusName" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.bonus.bonusCost">@Localizer["BonusCost"]</label>
                <input required class="form-control" asp-for="@Model.bonus.bonusCost" value="@Model.bonus.bonusCost" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.bonus.aboutBonus">@Localizer["About"]</label>
                <textarea required class="form-control" asp-for="@Model.bonus.aboutBonus">@Model.bonus.aboutBonus</textarea>
            </div>
            <div class="form-group">
                <input class="btn btn-primary" type="submit" value="@Localizer["Add"]" />
            </div>
        </form>
    </div>
</div>