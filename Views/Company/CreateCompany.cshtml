@model CrowdFundingApp.ViewModels.CreateCompanyViewModel
@{
    ViewBag.Title = "Create new company";
}
    @using (Html.BeginForm())
    {
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="companyName" class="control-label">Name</label>
            <input type="text" asp-for="companyName" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="needDonate" class="control-label">Funding</label>
            <input type="text" asp-for="needDonate" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="endDate" class="control-label">End Date</label>
            <input type="text" asp-for="endDate" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="about" class="control-label">About</label>
            <input type="text" asp-for="about" class="form-control" />
        </div>

        <div>
            <select asp-for="theme">
                <option disabled selected>Choise theme</option>
                @foreach (ThemeList themeList in Model.themeList)
                {
                    <option value="@themeList.themeId">@themeList.themeName</option>
                }
            </select>
        </div>

        <div>
            <div id="tags">
                <label id="last">Tags: </label>
            </div>

            <label class="control-label">Write Tags</label>
            <input id="inputLine" type="text" class="form-control" />

        </div>
        <button id="addTag" class="addLink">Add tag</button>

        <div class="form-group">
            <input type="submit" value="Add" class="btn btn-outline-secondary" />
        </div>
    }

@section Scripts {
    <script>
        $(function () {
            let i = 0;
            let lastItem = $('last');
            $('addTag').click(function () {
                let newTag = document.createElement("div");
                let getTag = $('inputLine').value;
                newTag.id = "tagId_" + i;
                newTag.setAttribute('class', 'tag');
                newTag.setAttribute('asp-for', 'tags[i]');
                newTag.setAttribute('value', getTag);
                newTag.innerHTML = getTag;
                lastItem.append(newTag);
                lastItem = newTag
                i++
            })
        })
    </script>
}