@model IEnumerable<CrowdFundingApp.Models.Company>
@{
    ViewBag.Title = "Company List";
}

<table class="table">
    <tr><th>Name</th><th>Creater</th><th>About</th><th>Begin</th><th>End</th><th>Need</th><th>Found</th></tr>
    @foreach (var company in Model)
    {
        <tr>
            <td><a asp-controller="CompanyProfile" asp-action="CompanyProfile" asp-route-companyId="@company.companyId">@company.companyName</a></td>
            <td>@company.creater</td>
            <td>@company.about</td>
            <td>@company.startDate</td>
            <td>@company.endDate</td>
            <td>@company.needDonate</td>
            <td>@company.totaldonate</td>

        </tr>
    }
</table>



<div>
    <input type="text" id="text" />
    <div id="addTag" class="btn btn-outline-secondary" onclick="send()">Send</div>
</div>
<div id="comment"></div>

<script src="js/signalr/dist/browser/signalr.min.js"></script>
<script>

    const hubConnection = new signalR.HubConnectionBuilder()
        .withUrl("/Company")
        .build();

    function send() {
        let message = document.getElementById("text").value;
        hubConnection.invoke("Send", message);
    }

</script>