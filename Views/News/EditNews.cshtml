@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model CrowdFundingApp.ViewModels.NewsViewModel
@{
    ViewData["Title"] = "Edit News";
}
<div class="row justify-content-center">
    <div class="col-2">
        <img id="newsImg" src="@Model.news.newsImg" height="160" width="160" class="align-self-start mr-3">
        <button id="upload_widget" class="btn btn-primary btn-sm btn-block">@Localizer["ChangeImg"]</button>
    </div>
    <div class="col-6">
        <form asp-action="saveEditNews" asp-controller="News" asp-route-companyId="@Model.company">
            <input hidden asp-for="@Model.news.newsImg" id="saveImg" value="@Model.news.newsImg" />
            <div class="form-group">
                <label class="control-label" asp-for="@Model.news.newsName">@Localizer["Headler"]</label><br />
                <input class="form-control" asp-for="@Model.news.newsName" type="text" value="@Model.news.newsName" />
            </div>
            <div class="form-group">
                <label class="control-label" asp-for="@Model.news.newsText">@Localizer["WhatsNew"]</label>
                <textarea asp-for="@Model.news.newsText" class="form-control" id="exampleFormControlTextarea1" rows="3">@Model.news.newsText</textarea>
            </div>
            <div>
                <input type="submit" class="btn btn-primary" value="@Localizer["Save"]" />
            </div>
        </form>
    </div>
</div>

<script src="https://widget.cloudinary.com/v2.0/global/all.js" type="text/javascript"></script>
<script type="text/javascript">
    let newImg;
    let currentImg = document.getElementById('newsImg');
    var myWidget = cloudinary.createUploadWidget({
        cloudName: 'prozoff',
        uploadPreset: 'ml_default'
    }, (error, result) => {
        if (!error && result && result.event === "success") {
            console.log('Done! Here is the image info: ', result.info);
            newImg = result.info.secure_url;
            currentImg.setAttribute('src', newImg);
            document.getElementById('saveImg').setAttribute('value', newImg);
        }
    });
    document.getElementById("upload_widget").addEventListener("click", function () {
        myWidget.open();
    }, false);
</script>